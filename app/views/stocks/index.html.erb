<h2><b>Listing stocks</b></h2>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @stocks.each do |stock| %>
        <tr>
          <td><%= Product.find(stock.product_id).name %></td>
          <td><%= stock.quantity %></td>
          <td><%= link_to stock do %>
                <span class="glyphicon glyphicon-list-alt" data-toggle="tooltip" data-placement="left" data-original-title="Show"></span>
            <% end %>
          </td>
          <td><%= link_to edit_stock_path(stock) do %>
                <span class="glyphicon glyphicon-pencil" data-toggle="tooltip" data-placement="left" data-original-title="Edit"></span>
            <% end %>
          </td>
          <td><%= link_to stock, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove" data-toggle="tooltip" data-placement="left" data-original-title="Delete"></span>
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<ul class="pager">
  <li class="previous"><%= link_to 'Home', root_path %></li>
  <li class="previous"><%= link_to 'New Stock', new_stock_path %></li>
</ul>