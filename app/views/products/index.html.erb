<h1>Listing products</h1>
<div class="table-responsive">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to '', product, class: "glyphicon glyphicon-list-alt" %></td>
        <td><%= link_to '', edit_product_path(product), class: "glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', product, class: "glyphicon glyphicon-remove" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<ul class="pager">
  <li class="previous"><%= link_to 'Home', root_path %></li>
  <li class="previous"><%= link_to 'New Product', new_product_path %></li>
</ul>
